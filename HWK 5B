/******************************************************************************
Monte carlo Exercise for Hwk 5
*******************************************************************************/
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
// defining random number generator

#define dran(u1) ((rand()/(double) RAND_MAX)*(u1))

int main()
{
// long int  says number of times that will generate a random x & y 
long int k=5000000;
//printf(" Enter the number of times to run: \n");
//scanf("%li",&k);
long int i;
double x,y;
double pi,final;
// circle counts how many 'hits' fall within the circle area
long int circle=0;


for (i=0;i<=k;i++)
{
    x= dran(1.0);
    y=dran(1.0);
    if( x*x + y*y<=1)
    {
     //falls within circle area and thus counts
     circle++;  
    }
   //printf(" x is: %f , y is : %f \n",x,y);
   
}    
    final= circle*4;
    pi= final/(double)k;
    printf("The pi due to %li approximations is: %lf",k,pi);  
return 0;    
}

